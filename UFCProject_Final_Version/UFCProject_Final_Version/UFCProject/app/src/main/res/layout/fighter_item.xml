<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <TextView
      android:id="@+id/fighter_1"
      android:layout_width="165dp"
      android:layout_height="53dp"
      android:layout_marginStart="3dp"
      android:layout_marginTop="28dp"
      android:layout_marginEnd="16dp"
      android:padding="10dp"
      android:textAlignment="center"
      android:textSize="15sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/fighter_2"
      app:layout_constraintTop_toTopOf="parent"
      android:background="#064788"
      android:textColor="#FFFFFF"
      android:textStyle="bold" />



  <TextView
      android:id="@+id/fighter_2"
      android:layout_width="165dp"
      android:layout_height="53dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="28dp"
      android:layout_marginEnd="3dp"
      android:padding="10dp"
      android:textAlignment="center"
      android:textSize="15sp"
      app:layout_constraintEnd_toStartOf="@+id/fighter_1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:background="#D1083A"
      android:textColor="#FFFFFF"
      android:textStyle="bold" />
  <TextView
      android:layout_width="51dp"
      android:layout_height="47dp"
      android:layout_marginStart="2dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="2dp"
      android:padding="10dp"
      android:text="VS"
      android:textColor="#000"
      android:textStyle="bold"
      android:lineSpacingExtra="80dp"
      android:textAlignment="center"
      android:textSize="16sp"
      app:layout_constraintEnd_toStartOf="@+id/fighter_1"
      app:layout_constraintStart_toEndOf="@+id/fighter_2"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/winner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:textSize="18sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/fighter_1" />
  <View
      android:id="@+id/divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#D9D9D9"
      app:layout_constraintTop_toBottomOf="@+id/winner" />

</androidx.constraintlayout.widget.ConstraintLayout>